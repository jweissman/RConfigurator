#!/usr/bin/env ruby

unless ARGV.count > 0
  puts "rconfig -- RConfiguration file verify"
  puts "USAGE: rconfig [file1] [file2] ... "
end


require 'rubygems'			    	
require 'rconfigurator' 
require 'yaml'      

ARGV.each do |config_file|
  RConfigurator.configure!("[Parent Module]", config_file, true)
end